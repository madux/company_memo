                                        <field name="ref" string="Ref" invisible="0"/>  
                                        <field name="date" string="Date" invisible="0"/> 
                                        <field name="payment_journal_id" string="Payment journal" required="0" />  
                                        <field name="amount_total" string="Amount" invisible="0"/> 
                                        <field name="state" string="Status" invisible="0"/> 
                                        <button name="action_post" string="Post" class="oe_highlight btn-sm" type="object" groups="account.group_account_invoice,base.group_system,company_memo.mainmemo_account,account.group_account_manager" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                                        <field name="payment_state" string="Payment Status" invisible="0"/>  
                                        <!-- <button name="action_invoice_register_payment" id="account_invoice_payment_btn" type="object" class="oe_highlight btn-sm" attrs="{'invisible': ['|', '|', ('state', '!=', 'posted'), ('payment_state', '!=', 'not_paid'), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}" string="Register Payment" groups="account.group_account_invoice,base.group_system,company_memo.mainmemo_account,account.group_account_manager"/> -->
